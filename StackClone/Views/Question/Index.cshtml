
@{
    ViewData["Title"] = "Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model IEnumerable<StackClone.Models.Question>

<h2>Here is your list of questions, @User.Identity.Name</h2>
<hr />

@if (Model.Any())
{
    <ul>
        @foreach (var listQuestion in Model)
        {
        <li>
            @Html.ActionLink(@listQuestion.Title, "Detail", new {id = listQuestion.QuestionId})
        </li>
        }
</ul>
}
else
{
    <p>No tasks have been added yet!</p>
}

    @Html.ActionLink("Create new", "Create")

