
@{
    ViewData["Title"] = "Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model IEnumerable<StackClone.Models.Question>

    <h2>Here is your list of questions, @User.Identity.Name you stupid dummy</h2>
    <hr />

    @if (Model.Any())
{
    <ul>
        @foreach (var listQuestion in Model)
        {
        <li>@Html.DisplayFor(modelQuestion => listQuestion.Content)</li>
        }
    </ul>
}
else
{
    <p>No tasks have been added yet!</p>
}

    @Html.ActionLink("Create new", "Create")

